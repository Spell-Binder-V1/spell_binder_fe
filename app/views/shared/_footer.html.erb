<div id="custom-footer">
  <div style="padding-bottom: 60px;">
  <footer style="border: 1px solid #356461; padding: 10px; background-color: #356461; position: fixed; bottom: 0; left: 0; right: 0;">
    <ul style="list-style: none; margin: 0; padding: 0;">
      <li style="display: inline-block; margin-right: 10px;">
        <%= link_to "Home", root_path, style: "text-decoration: none; padding: 5px 10px; color: #FFFFFF;" %>
      </li>
      <li style="display: inline-block; margin-right: 10px;">
        <%= form_tag('/auth/google_oauth2/', method: :post, data: { turbo: false }) do %>
          <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
          <%= submit_tag "Login", style: "padding: 0; font: inherit; color: #FFFFFF; background: none; border: none; cursor: pointer;" %>
        <% end %>
      </li>
      <li style="display: inline-block; margin-right: 10px;">
        <%= link_to "Adv Search", coming_soon_path, style: "text-decoration: none; padding: 5px 10px; color: #FFFFFF;" %>
      </li>
      <li style="display: inline-block; margin-right: 10px;">
        <%= link_to "How To Play", coming_soon_path, style: "text-decoration: none; padding: 5px 10px; color: #FFFFFF;" %>
      </li>
      <li style="display: inline-block; margin-right: 10px;">
        <%= link_to "Discord", coming_soon_path, style: "text-decoration: none; padding: 5px 10px; color: #FFFFFF;" %>
      </li>
      <li style="display: inline-block; margin-right: 10px;">
        <%= link_to "Instagram", coming_soon_path, style: "text-decoration: none; padding: 5px 10px; color: #FFFFFF;" %>
      </li>
      <li style="display: inline-block;">
        <%= link_to "Contact Us", coming_soon_path, style: "text-decoration: none; padding: 5px 10px; color: #FFFFFF;" %>
      </li>
    </ul>
  </footer>
  </div>
</div>
